# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# LLM Provider Configuration
# Choose provider: openai, gemini, or groq
PROVIDER=openai

# API Keys (only the one for your chosen provider is required)
# OpenAI: Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Gemini: Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Groq: Get from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Model Configuration
# Leave blank to use provider default:
#   openai: gpt-4o-mini
#   gemini: gemini-2.5-flash-preview-09-2025
#   groq: llama-3.3-70b-versatile
MODEL=

# Timeout for API requests (seconds)
TIMEOUT=60

# Maximum context tokens to use (will be capped by model limit)
MAX_CONTEXT_TOKENS=16000

# Authorization
# Get your Telegram user ID from @userinfobot
AUTHORIZED_USER_ID=your_telegram_user_id_here

# Database
DATABASE_PATH=data/messages.db

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
